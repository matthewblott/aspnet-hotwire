@model aspnet_hotwire.Data.Todo

<turbo-frame id="todo_@Model.Id">
  <form method="post">
    <input type="hidden" asp-for="@Model.Id">
    <div>
      <input asp-for="@Model.Name">
      <a asp-action="Index">Cancel</a>
      <button asp-action="Update" asp-route-id="@Model.Id">Save</button>
    </div>
  </form>
</turbo-frame>
